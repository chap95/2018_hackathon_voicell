<p id="notice"><%= notice %></p>

<h1><%= @bulletin.title %></h1>

<table>
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= render 'posts/index/index_normal', post: post %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '글 쓰기', (@bulletin.present? ?  new_bulletin_post_path(@bulletin) : new_post_path), class: 'btn btn-default' %>