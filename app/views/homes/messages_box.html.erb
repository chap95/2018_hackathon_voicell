<body class="msg_body">
  <div class="container" id="msg_main">
    <div class="row" style="margin-top: 100px;">
      <div class="col-md-9">
        <h3>쪽지함</h3>
        <ul id="conversations-list">
            <% @conversations.each do |conversation| %>
              <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
          <% end %>
        </ul>
      </div>
     
      <div class="col-md-3" style="border-left: 1px solid black">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">유저목록</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @users.each do |user| %>
                <li><%= link_to user.nickname, conversations_path(user_id: user), remote: true, method: :post %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
