<div class="row col-12 col-sm-12 col-md-12"><h3>
    <%= post.title %></h3>
</div>
<div class="row">
    <div class="col-6 col-sm-6 col-md-8 etc"><%= post.user != nil ? post.user.nickname : post.user_nickname %></div>
    <div align="right" class="col-6 col-sm-6 col-md-4 etc"><i class="fas fa-sign-language"></i> <%= post.unique_impression_count %></div>
</div>
<hr/>
<div align="right" class="col-12 col-sm-12 col-md-12"><i class="far fa-clock"></i> <%= post.created_at.in_time_zone("Asia/Seoul").strftime('%Y-%m-%d %H:%M') %></div>

<div style="margin-top: 30px;">
    <%= content_tag(:div, post.content.html_safe, :class => "panel-body") %>
</div>