<div class="board d-none d-md-block" style="background: url('<%= asset_path 'board_banner2.jpg' %>') no-repeat fixed; background-size: 100% 70%; background-position:0px -180px;">
  <div class="container" align="left">
    <%= link_to "공지사항", all_notices_path, class: "board_title" %>
  </div>
</div>
<div class="board_mobile d-md-none" style="background: url('<%= asset_path 'board_banner2.jpg' %>') no-repeat center center/cover scroll;">
  <%= link_to "공지사항", all_notices_path, class: "board_title" %>
</div>

<%# 경고메세지 출력 (아이디, 비밀번호 잘못 칠 시 등등...) %>
<% if alert %>
  <div class="alert alert-danger tlert-dismissible fade show text-center" style="padding: 10px; background-color: #FF4B5C; color: white; border-radius: 0; margin-bottom: 0; border: 0">
    <%= alert %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% elsif notice %>
  <div class="alert alert-danger tlert-dismissible fade show text-center" style="padding: 10px; background-color: #43AC6A; color: white; border-radius: 0; margin-bottom: 0; border: 0">
    <%= notice %>
    <button type="button" class="close" data-dismiss="alert">&times;</button>
  </div>
<% end %>

<div class="container" style="margin-top: 30px;">
  <%= render 'all_notices/show/show_normal', post: @all_notice %>
</div>

<div class="row" style="margin-top: 30px;">
    <div class="col-6 col-sm-6 col-md-2">
        <% if can? :new, post %>
            <%= link_to '글 쓰기', new_all_notice_path, class: 'btn btn-sm btn-primary' %>
        <% end %>
    </div>
    
    <div align="right" class="col-6 col-sm-6 col-md-10">
        <% if can? :update, post %>
            <%= link_to '수정', edit_all_notice_path(post), class: 'btn btn-sm btn-outline-dark' %>
        <% end %>
        
        <% if can? :destroy, post %>
            <%= link_to '삭제', post, method: :delete, class: 'btn btn-sm btn-danger', data: { confirm: '정말 게시글을 지우시겠습니까?' } %>
        <% end %>
        <%= link_to '목록', all_notices_path, class: 'btn btn-sm btn-outline-dark' %>
    </div>
</div>
 
<hr/>