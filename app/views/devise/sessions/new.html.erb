<div class="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field" align="center">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-6 col-sm-4 col-md-3 white_underbar_form" %>
    </div>
  
    <div class="field password" align="center">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "col-6 col-sm-4 col-md-3 white_underbar_form" %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field" align="center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions" align="center">
      <%= f.submit "Log in", class: "btn btn-outline-secondary", style: "width: 150px; border-radius: 15px" %>
    </div>
  <% end %>
  <div align="center">
    <%= render "devise/shared/links" %>
  </div>
</div>